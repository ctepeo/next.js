{
  "compilerOptions": {
    "target": "ES2017",
    "paths": {
      "@public/*": ["./public/*"],
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@app/*": ["./src/app/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@providers/*": ["./src/providers/*"],
      "@types/*": ["./src/types/*"],
      "@dictionaries/*": ["./src/i18n/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "test/**/*.tsx", "test/**/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "test", "build", "**/*spec.ts"]
}
